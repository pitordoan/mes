<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- <import resource="application-config.xml"/> -->

	<bean name="/UserService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="userService" />
		<property name="serviceInterface" value="com.cimpoint.common.services.UserService" />
	</bean>   
	
	<bean name="/FormService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="formService" />
		<property name="serviceInterface" value="com.cimpoint.common.services.FormService" />
	</bean> 
	<!-- Add more remote services here -->
	
</beans>