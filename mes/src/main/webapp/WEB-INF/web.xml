	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/context-config.xml</param-value>
	</context-param>
 
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<servlet-class>org.spring4gwt.server.SpringGwtRemoteServiceServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<url-pattern>/com.cimpoint.mes.MESApplication/springGwtServices/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>/MESApplication.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>AppConfigServlet</servlet-name>
		<servlet-class>com.cimpoint.common.server.servlets.AppConfigServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>MESConfigServlet</servlet-name>
		<servlet-class>com.cimpoint.mes.server.servlets.MESConfigServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>CustomCodeServlet</servlet-name>
		<servlet-class>com.cimpoint.mes.server.servlets.CustomCodeServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>
	
